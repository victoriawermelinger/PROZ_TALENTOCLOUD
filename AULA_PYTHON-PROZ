# Operadores Relacionais

print(5>2)
print(5<2)
print(5>=2)
print(5<=2)
print(8==8)
print(5!=10)

texto = "pão"
print(texto == "Pão")

texto = "pão"
print(texto != "Pão")

# Estruturas Condicionais

